@model IEnumerable<ProgramaStarter.Application.DTO.UsuarioDTO>

<h1>Usuarios</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-primary">
                    <i title="Register New" class="fas fa-plus"></i> Novo Usuario
                </a>
            </div>
        </div>
    </div>
</div>
<br />

<table id="scrum" class="table table-sm table-hover table-striped table-borderless">
    <thead>
        <tr class="table-primary">
            <th>Id</th>
            <th>Nome</th>
            <th>Letras</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var usuario in Model) {
            <tr>
                <td class="align-middle">@usuario.Id</td>
                <td class="align-middle">@usuario.Nome</td>
                <td class="align-middle">@usuario.Letras</td>
                <td class="align-middle">@usuario.Email</td>

                <td class="align-middle">
                    <button class="btn btn-secondary btn-sm">
                        <a asp-action="Edit" asp-route-id="@usuario.Id" title="Edit">
                            <i class="fa-regular fa-pen-to-square"></i> Editar</a>
                    </button>
                    <button class="btn btn-danger btn-sm"><a asp-action="Delete" asp-route-id="@usuario.Id" title="Delete">
                            <i class="fa-regular fa-trash-can"></i> Excluir</a>
                    </button>

                </td>
            </tr>
        }    
    </tbody>

</table>
