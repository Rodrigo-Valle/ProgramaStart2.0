@model ProgramaStarter.Application.DTO.AvaliacaoDTO

<form asp-controller="Avaliacao" asp-action="Edit" method="POST">
    <input type="hidden" asp-for="StarterId" value="@Model.Starter.Id">
    <input type="hidden" asp-for="Starter" value="@Model.Starter">
    <input type="hidden" asp-for="Id">



    <div class="row">
        <div class="form-floating col-md-1 col">
            <input class="form-control" type="number" step="0.25" asp-for="Nota">
            <label class="form-label" asp-for="Nota">Nota</label>
            <span asp-validation-for="Nota" class="text-danger"></span>
        </div>

        <div class="form-floating col-md-6 col">
            <select class="form-control" asp-for="ProjetoId"
                asp-items="@ViewBag.ProjetoId"></select>
            <label class="form-label" asp-for="ProjetoId">Projeto</label>
            <span asp-validation-for="ProjetoId" class="text-danger"></span>
        </div>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Confirmar</button>
    <button type="button" class="btn btn-outline-secondary"><a asp-action="Index" asp-route-starterId="@Model.Starter.Id">Retornar</a></button>

</form>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}