@model IEnumerable<ProgramaStarter.Application.DTO.ProgramaStartDTO>
    
<script>
    $(document).ready( function () {
    $('#programas').DataTable({
        "language": {
            "lengthMenu": "Mostrar _MENU_ registros por paginas",
            "zeroRecords": "Nada encontrado",
            "info": "Mostrando a pagina _PAGE_ de _PAGES_",
            "infoEmpty": "Nada a exibir",
            "infoFiltered": "(filtrado de _MAX_ registros)"
        }
    });
} );
</script>

<h1>Programas</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-primary">
                    <i title="Register New" class="fas fa-plus"></i> Novo Programa
                </a>
            </div>
        </div>
    </div>
</div>
<br />

<table id="programas" class="table table-sm table-hover table-striped table-borderless">
    <thead>
        <tr class="table-light">
            <th>Id</th>
            <th>Nome</th>
            <th>Data de Inicio</th>
            <th>Data de Encerramento</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var programa in Model) {
            <tr>
                <td>@programa.Id</td>
                <td>@programa.Nome</td>
                <td>@programa.DataInicio.ToString("dd/MM/yyyy")</td>
                <td>@programa.DataFim.ToString("dd/MM/yyyy")</td>

                <td>
                    <button class="btn btn-secondary"><a asp-action="Edit" asp-route-id="@programa.Id" title="Edit">Editar</a></button> 
                    <button class="btn btn-danger"><a asp-action="Delete" asp-route-id="@programa.Id" title="Delete">Excluir</a></button>
                </td>
            </tr>
        }    
    </tbody>

</table>
