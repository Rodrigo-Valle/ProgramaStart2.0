@model ProgramaStarter.Application.DTO.ProgramaStartDTO

<form asp-controller="ProgramaStart" asp-action="Create" method="POST">
  <input type="hidden" asp-for="Id" value="0">

  <div class="form-row">
    <div class="form-group col-md-6">
      <label asp-for="Nome">Nome</label>
      <input type="text" asp-for="Nome" class="form-control" placeholder="Nome">
      <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-4">
      <label asp-for="DataInicio">Data de Inicio</label>
      <input type="date" asp-for="DataInicio" class="form-control">
      <span asp-validation-for="DataInicio" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
      <label asp-for="DataFim">Data de Encerramento</label>
      <input type="date" asp-for="DataFim" class="form-control">
      <span asp-validation-for="DataFim" class="text-danger"></span>
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Confirmar</button>
  <button class="btn btn-outline-secondary"><a asp-action="Index">Retornar</a></button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}