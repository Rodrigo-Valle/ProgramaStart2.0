@model ProgramaStarter.Application.DTO.ProgramaStartDTO

<form asp-controller="ProgramaStart" asp-action="Create" method="POST">
  <input type="hidden" asp-for="Id" value="0">

  <div class="row">
    <div class="form-floating mb-3 col-md-8">
      <input type="text" class="form-control" placeholder="Nome" asp-for="Nome">
      <label class="form-label" asp-for="Nome">Nome</label>
      <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
  </div>

  <div class="row">
    <div class="form-floating mb-3 col-md-4">
      <input type="date" asp-for="DataInicio" class="form-control">
      <label class="form-label" asp-for="DataInicio">Data de Inicio</label>
      <span asp-validation-for="DataInicio" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3 col-md-4">
      <input type="date" asp-for="DataFim" class="form-control">
      <label class="form-label asp-for=" DataFim">Data de Encerramento</label>
      <span asp-validation-for="DataFim" class="text-danger"></span>
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Confirmar</button>
  <button type="button" class="btn btn-outline-secondary"><a asp-action="Index">Retornar</a></button>
</form>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}