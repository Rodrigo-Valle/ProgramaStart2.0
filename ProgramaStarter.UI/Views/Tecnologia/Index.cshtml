@model IEnumerable<ProgramaStarter.Application.DTO.TecnologiaDTO>

<h1>Tecnologias</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-primary">
                    <i title="Register New" class="fa-regular fa-plus"></i> Nova Tecnologia
                </a>
            </div>
        </div>
    </div>
</div>
<br />

<table id="tecnologias" class="table table-sm table-hover table-striped table-borderless">
    <thead>
        <tr class="table-light">
            <th>Id</th>
            <th>Nome</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tecnologia in Model)
        {
            <tr>
                <td class="align-middle">@tecnologia.Id</td>
                <td class="align-middle">@tecnologia.Nome</td>
                <td class="align-middle">@tecnologia.Descricao</td>
                <td class="align-middle">
                    <button class="btn btn-secondary btn-sm"><a asp-action="Edit" asp-route-id="@tecnologia.Id" title="Edit">
                            <i title="Register New" class="fa-regular fa-pen-to-square"></i> Editar</a>
                    </button>
                    <button class="btn btn-danger btn-sm"><a asp-action="Delete" asp-route-id="@tecnologia.Id" title="Delete">
                            <i class="fa-regular fa-trash-can"></i> Excluir</a>
                    </button>
                </td>
            </tr>
        }
    </tbody>

</table>
