@model ProgramaStarter.Application.DTO.ModuloDTO

<form asp-controller="Modulo" asp-action="Edit" method="POST">
  <input type="hidden" asp-for="Id">  
  
  <div class="row">
    <div class="form-floating col-md-8">
      <input type="text"  class="form-control" placeholder="Nome" asp-for="Nome">
      <label class="form-label" asp-for="Nome">Nome</label>
      <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Confirmar</button>
  <button type="button" class="btn btn-outline-secondary"><a asp-action="Index">Retornar</a></button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}